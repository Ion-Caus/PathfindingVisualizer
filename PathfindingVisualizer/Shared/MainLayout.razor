@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>.
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudText Typo="Typo.h5" Class="ml-3">Pathfinding Visualizer</MudText>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    private readonly MudTheme _theme = new()
    {
        Palette = new Palette
        {
            Primary = "#122b47",
            AppbarBackground = "#122b4f"
        }
    };

}