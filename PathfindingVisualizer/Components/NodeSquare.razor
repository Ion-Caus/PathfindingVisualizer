@using PathfindingVisualizer.Models

<div @onclick="@OnClick" class="square transition @($"state-{Node.State}")">
</div>

<style>
    .square {
        width: 35px;
        height: 35px;
        outline: 1px solid #e2eafc;
    }
    
    .transition {
        transition: 0.2s cubic-bezier(0.42, 0, 0.41, 1.21);
    
    }
    
    .square:active {
        animation: scale 0.3s linear both;
    }
    
    @@keyframes scale {
        0% {
            transform: scale(0.8);
             
        }
        50% {
            transform: scale(1.3);
                
                
        }
        100% {
            transform: scale(1);
        }
    }
  
    
    .state-Empty {
        background: #fff;
    }
    
    .state-Wall {
        background: #023047;
    }
    
    .state-Start {
        background: #90be6d;
    }
    
    .state-End {
        background: #e63946;
    }
    
    .state-Path {
        background: #219ebc;
    }
    
    .state-Open {
        background: #ffc300;
    }
    
    .state-Closed {
        background: #ff9b54;
    }
    
</style>

@code {
    [Parameter]
    public Node Node { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}