@using PathfindingVisualizer.Models

<div @onclick="@OnClick" class="square transition @($"state-{Node.State}")">
</div>

<style>
    .square {
        width: 35px;
        height: 35px;
        outline: 1px solid grey;
    }
    
    .transition {
        transition: 0.2s cubic-bezier(0.42, 0, 0.41, 1.21);
    
    }
    
    .square:active {
        animation: scale 0.3s linear both;
    }
    
    @@keyframes scale {
        0% {
            transform: scale(0.8);
             
        }
        50% {
            transform: scale(1.3);
                
                
        }
        100% {
            transform: scale(1);
        }
    }
  
    
    .state-Empty {
        background: white;
    }
    
    .state-Wall {
        background: black;
    }
    
    .state-Start {
        background: #4f964f;
    }
    
    .state-End {
        background: #d55454;
    }
    
    .state-Path {
        background: #5b81cb;
    }
    
    .state-Open {
        background: #fafa4f;
    }
    
    .state-Closed {
        background: #ffb62b;
    }
    
</style>

@code {
    [Parameter]
    public Node Node { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
}